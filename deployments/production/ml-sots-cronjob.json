{
  "apiVersion": "batch/v2alpha1",
  "kind": "CronJob",
  "metadata": {
    "labels": {
      "environment": "production",
      "name": "ml-sots"
    },
    "name": "ml-sots",
    "namespace": "spark-cluster-production"
  },
  "spec": {
    "concurrencyPolicy": "Forbid",
    "failedJobsHistoryLimit": 1,
    "jobTemplate": {
      "metadata": {
        "labels": {
          "environment": "production",
          "name": "ml-sots"
        }
      },
      "spec": {
        "template": {
          "metadata": {
            "labels": {
              "environment": "production",
              "name": "ml-sots"
            }
          },
          "spec": {
            "containers": [
              {
                "env": [
                  {
                    "name": "MASTER_HOST",
                    "value": "spark-cluster-master"
                  },
                  {
                    "name": "MASTER_PORT",
                    "value": "7077"
                  },
                  {
                    "name": "SPARK_EXECUTOR_MEMORY",
                    "value": "32G"
                  },
                  {
                    "name": "SPARK_DRIVER_MEMORY",
                    "value": "11G"
                  },
                  {
                    "name": "AWS_ACCESS_KEY_ID",
                    "value": "AKIAIXU6VCNIUETQW6MA"
                  },
                  {
                    "name": "AWS_SECRET_ACCESS_KEY",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "awssecretaccesskey2",
                        "name": "ml-sots-secrets"
                      }
                    }
                  },
                  {
                    "name": "AWS_BUCKET",
                    "value": "wink-sots-production"
                  },
                  {
                    "name": "SOT_ENV",
                    "value": "production"
                  },
                  {
                    "name": "DATABASE_URL",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "databaseurl",
                        "name": "ml-sots-secrets"
                      }
                    }
                  },
                  {
                    "name": "DATABASE_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "databaseuser",
                        "name": "ml-sots-secrets"
                      }
                    }
                  },
                  {
                    "name": "DATABASE_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "databasepass",
                        "name": "ml-sots-secrets"
                      }
                    }
                  },
                  {
                    "name": "CONCIERGE_DATABASE_URL",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "concierge_databaseurl",
                        "name": "ml-sots-secrets"
                      }
                    }
                  },
                  {
                    "name": "CONCIERGE_DATABASE_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "concierge_databaseuser",
                        "name": "ml-sots-secrets"
                      }
                    }
                  },
                  {
                    "name": "CONCIERGE_DATABASE_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "concierge_databasepassword",
                        "name": "ml-sots-secrets"
                      }
                    }
                  },
                  {
                    "name": "TAXO_HOST",
                    "value": "taxonomer.wink.com"
                  }
                ],
                "image": "quay.io/winkapp/ml-sots:production",
                "imagePullPolicy": "Always",
                "name": "ml-sots",
                "ports": [
                  {
                    "containerPort": 4040,
                    "protocol": "TCP"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "1500m",
                    "memory": "14000Mi"
                  },
                  "requests": {
                    "cpu": "1000m",
                    "memory": "11000Mi"
                  }
                }
              }
            ],
            "imagePullSecrets": [
              {
                "name": "winkapp-ml-sot-deployment-pull-secret"
              }
            ],
            "nodeSelector": {
              "instance-type": "memory"
            },
            "restartPolicy": "Never",
            "tolerations": [
              {
                "effect": "NoSchedule",
                "key": "dedicated",
                "value": "memory"
              }
            ]
          }
        }
      }
    },
    "schedule": "30 0 * * *",
    "successfulJobsHistoryLimit": 3
  }
}
