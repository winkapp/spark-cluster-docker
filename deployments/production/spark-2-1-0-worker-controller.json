{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "environment": "production",
            "name": "spark-worker-controller-2-1-0",
            "tag": "2.1.0",
            "team": "data"
        },
        "name": "spark-worker-controller-2-1-0",
        "namespace": "spark-cluster-production"
    },
    "spec": {
        "replicas": 3,
        "template": {
            "metadata": {
                "labels": {
                    "environment": "production",
                    "name": "spark-worker-controller-2-1-0",
                    "tag": "2.1.0",
                    "team": "data"
                }
            },
            "spec": {
                "containers": [
                    {
                        "args": [
                            "/bin/bash",
                            "/usr/local/spark/sbin/start-slave.sh",
                            "spark://$(SPARK_MASTER_HOST):$(SPARK_MASTER_PORT)"
                        ],
                        "env": [
                            {
                                "name": "SPARK_WORKER_MEMORY",
                                "valueFrom": {
                                    "resourceFieldRef": {
                                        "divisor": "0",
                                        "resource": "requests.memory"
                                    }
                                }
                            },
                            {
                                "name": "SPARK_MASTER_HOST",
                                "value": "spark-cluster-master-2-1-0"
                            },
                            {
                                "name": "SPARK_MASTER_PORT",
                                "value": "7077"
                            }
                        ],
                        "image": "quay.io/winkapp/spark-standalone:2.1.0",
                        "imagePullPolicy": "IfNotPresent",
                        "livenessProbe": {
                            "failureThreshold": 3,
                            "httpGet": {
                                "path": "/",
                                "port": 8081,
                                "scheme": "HTTP"
                            },
                            "initialDelaySeconds": 10,
                            "periodSeconds": 30,
                            "successThreshold": 1,
                            "timeoutSeconds": 10
                        },
                        "name": "spark-worker-controller-2-1-0",
                        "ports": [
                            {
                                "containerPort": 8081,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "4",
                                "memory": "4000Mi"
                            },
                            "requests": {
                                "cpu": "4",
                                "memory": "4000Mi"
                            }
                        },
                        "terminationMessagePath": "/dev/termination-log"
                    },
                    {
                        "args": [
                            "/bin/bash",
                            "/usr/local/spark/sbin/start-shuffle-service.sh"
                        ],
                        "image": "quay.io/winkapp/spark-standalone:2.1.0",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "spark-shuffle-service",
                        "ports": [
                            {
                                "containerPort": 7337,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "1",
                                "memory": "512Mi"
                            },
                            "requests": {
                                "cpu": "1",
                                "memory": "256Mi"
                            }
                        },
                        "terminationMessagePath": "/dev/termination-log"
                    }
                ],
                "nodeSelector": {
                    "instance-type": "memory"
                },
                "restartPolicy": "Always",
                "schedulerName": "default-scheduler",
                "tolerations": [
                    {
                        "effect": "NoSchedule",
                        "key": "dedicated",
                        "value": "memory"
                    }
                ]
            }
        }
    }
}
