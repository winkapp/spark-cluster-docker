{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "name": "spark-master",
            "environment": "production"
        },
        "name": "spark-master",
        "namespace": "spark-cluster-production"
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "spark-master",
                    "environment": "production"
                }
            },
            "spec": {
                "containers": [
                    {
                        "args": [
                            "master"
                        ],
                        "env": [
                            {
                                "name": "SPARK_MASTER_HOST",
                                "value": "spark-cluster-master"
                            },
                            {
                                "name": "SPARK_MASTER_PORT",
                                "value": "7077"
                            }
                        ],
                        "image": "quay.io/winkapp/spark-standalone:master",
                        "imagePullPolicy": "Always",
                        "name": "spark-master",
                        "ports": [
                            {
                                "containerPort": 7077,
                                "name": "worker-port"
                            },
                            {
                                "containerPort": 8080,
                                "name": "http"
                            }
                        ],
                        "readinessProbe": {
                            "tcpSocket": {
                                "port": "worker-port"
                            },
                            "initialDelaySeconds": 60
                        },
                        "resources": {
                            "limits": {
                                "cpu": "100m",
                                "memory": "700Mi"
                            },
                            "requests": {
                                "cpu": "100m",
                                "memory": "700Mi"
                            }
                        }
                    }
                ]
            }
        }
    }
}
