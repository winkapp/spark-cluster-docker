{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "component": "spark-cluster-master",
            "name": "spark-cluster-master",
            "environment": "production"
        },
        "name": "spark-master-controller",
        "namespace": "spark-cluster-production"
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "component": "spark-cluster-master",
                    "name": "spark-cluster-master",
                    "environment": "production"
                }
            },
            "spec": {
                "tolerations": [{
                    "key": "dedicated",
                    "value": "memory",
                    "effect": "NoSchedule"
                }],
                "nodeSelector": {
                    "instance-type": "memory"
                },
                "containers": [
                    {
                        "args": [
                            "master"
                        ],
                        "env": [
                            {
                                "name": "SPARK_MASTER_HOST",
                                "value": "spark-cluster-master"
                            },
                            {
                                "name": "SPARK_MASTER_PORT",
                                "value": "7077"
                            },
                            {
                                "name": "SPARK_MASTER_MEM",
                                "value": "4G"
                            }
                        ],
                        "image": "quay.io/winkapp/spark-standalone:master",
                        "imagePullPolicy": "Always",
                        "name": "spark-master",
                        "ports": [
                            {
                                "containerPort": 7077,
                                "protocol": "TCP"
                            },
                            {
                                "containerPort": 8080,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "4",
                                "memory": "4G"
                            },
                            "requests": {
                                "cpu": "4",
                                "memory": "4G"
                            }
                        },
                        "terminationMessagePath": "/dev/termination-log"
                    }
                ],
                "restartPolicy": "Always"
            }
        }
    }
}
