{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "environment": "production",
            "name": "spark-ui-proxy"
        },
        "name": "spark-ui-proxy",
        "namespace": "spark-cluster-production"
    },
    "spec": {
        "replicas": 3,
        "template": {
            "metadata": {
                "labels": {
                    "environment": "production",
                    "name": "spark-ui-proxy"
                }
            },
            "spec": {
                "containers": [
                    {
                        "livenessProbe": {
                            "failureThreshold": 5,
                            "httpGet": {
                                "path": "/",
                                "port": 80
                            },
                            "initialDelaySeconds": 60,
                            "periodSeconds": 30,
                            "successThreshold": 1,
                            "timeoutSeconds": 15
                        },
                        "readinessProbe": {
                            "failureThreshold": 5,
                            "httpGet": {
                                "path": "/",
                                "port": 80
                            },
                            "initialDelaySeconds": 60,
                            "periodSeconds": 30,
                            "successThreshold": 1,
                            "timeoutSeconds": 15
                        },
                        "args": [
                            "spark-webui:8080"
                        ],
                        "image": "ursuad/spark-ui-proxy",
                        "name": "spark-ui-proxy",
                        "ports": [
                            {
                                "containerPort": 80
                            }
                        ],
                        "resources": {
                            "requests": {
                                "cpu": "100m",
                                "memory": "75Mi"
                            },
                            "limits": {
                                "cpu": "100m",
                                "memory": "75Mi"
                            }
                        }
                    }
                ]
            }
        }
    }
}
