{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "component": "spark-worker",
            "name": "spark-worker",
            "environment": "production"
        },
        "name": "spark-worker-controller",
        "namespace": "spark-cluster-production"
    },
    "spec": {
        "replicas": 8,
        "template": {
            "metadata": {
                "labels": {
                    "component": "spark-worker",
                    "name": "spark-worker",
                    "environment": "production"
                }
            },
            "spec": {
                "tolerations": [{
                    "key": "dedicated",
                    "value": "memory",
                    "effect": "NoSchedule"
                }],
                "nodeSelector": {
                    "instance-type": "memory"
                },
                "containers": [
                    {
                        "args": [
                            "worker"
                        ],
                        "env": [
                            {
                                "name": "SPARK_MASTER_URL",
                                "value": "spark-cluster-master:7077"
                            },
                            {
                                "name": "SPARK_WORKER_MEM",
                                "value": "13G"
                            }
                        ],
                        "image": "quay.io/winkapp/spark-standalone:master",
                        "imagePullPolicy": "Always",
                        "livenessProbe": {
                            "failureThreshold": 3,
                            "httpGet": {
                                "path": "/",
                                "port": 8081,
                                "scheme": "HTTP"
                            },
                            "initialDelaySeconds": 10,
                            "periodSeconds": 30,
                            "successThreshold": 1,
                            "timeoutSeconds": 10
                        },
                        "name": "spark-worker",
                        "ports": [
                            {
                                "containerPort": 8081,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "6",
                                "memory": "13G"
                            },
                            "requests": {
                                "cpu": "6",
                                "memory": "13G"
                            }
                        },
                        "terminationMessagePath": "/dev/termination-log"
                    }
                ],
                "restartPolicy": "Always"
            }
        }
    }
}
