{
  "apiVersion": "batch/v2alpha1",
  "kind": "CronJob",
  "metadata": {
    "labels": {
      "environment": "production",
      "name": "towerdata-etl"
    },
    "name": "towerdata-etl",
    "namespace": "spark-cluster-production"
  },
  "spec": {
    "concurrencyPolicy": "Forbid",
    "failedJobsHistoryLimit": 1,
    "jobTemplate": {
      "metadata": {
        "labels": {
          "environment": "production",
          "name": "towerdata-etl"
        }
      },
      "spec": {
        "template": {
          "metadata": {
            "labels": {
              "environment": "production",
              "name": "towerdata-etl"
            }
          },
          "spec": {
            "containers": [
              {
                "env": [
                  {
                    "name": "DBNAME",
                    "value": "production"
                  },
                  {
                    "name": "DBPORT",
                    "value": "5439"
                  },
                  {
                    "name": "DBHOST",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "dbhost",
                        "name": "towerdata-etl-secrets"
                      }
                    }
                  },
                  {
                    "name": "DBUSER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "dbuser",
                        "name": "towerdata-etl-secrets"
                      }
                    }
                  },
                  {
                    "name": "DBPASS",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "dbpass",
                        "name": "towerdata-etl-secrets"
                      }
                    }
                  },
                  {
                    "name": "WINK_DB_NAME",
                    "value": "quirky_wink"
                  },
                  {
                    "name": "WINK_DB_HOST",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "winkdbhost",
                        "name": "towerdata-etl-secrets"
                      }
                    }
                  },
                  {
                    "name": "WINK_DB_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "winkdbuser",
                        "name": "towerdata-etl-secrets"
                      }
                    }
                  },
                  {
                    "name": "WINK_DB_PASS",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "winkdbpass",
                        "name": "towerdata-etl-secrets"
                      }
                    }
                  },
                  {
                    "name": "TOWERDATA_API_KEY",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "towerdataapikey",
                        "name": "towerdata-etl-secrets"
                      }
                    }
                  }
                ],
                "image": "quay.io/winkapp/towerdata-etl:master",
                "imagePullPolicy": "Always",
                "name": "towerdata-etl",
                "resources": {
                  "limits": {
                    "cpu": "1500m",
                    "memory": "9000Mi"
                  },
                  "requests": {
                    "cpu": "1000m",
                    "memory": "7500Mi"
                  }
                }
              }
            ],
            "imagePullSecrets": [
              {
                "name": "winkapp-towerdata-etl-pull-secret"
              }
            ],
            "nodeSelector": {
              "instance-type": "memory"
            },
            "restartPolicy": "Never",
            "tolerations": [
              {
                "effect": "NoSchedule",
                "key": "dedicated",
                "value": "memory"
              }
            ]
          }
        }
      }
    },
    "schedule": "0 * * * *",
    "successfulJobsHistoryLimit": 3
  }
}
