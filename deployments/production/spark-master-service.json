{
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
        "name": "spark-master",
        "namespace": "spark-cluster-production",
        "labels": {
            "name": "spark-master",
            "environment": "production"
        }
    },
    "spec": {
        "clusterIP": "None",
        "ports": [
            {
                "name": "worker-port",
                "port": 7077,
                "protocol": "TCP",
                "targetPort": 7077
            }
        ],
        "selector": {
            "environment": "production",
            "name": "spark-master"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
    }
}
