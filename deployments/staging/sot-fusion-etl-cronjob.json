{
  "apiVersion": "batch/v2alpha1",
  "kind": "CronJob",
  "metadata": {
    "labels": {
      "environment": "staging",
      "name": "sot-fusion-etl"
    },
    "name": "sot-fusion-etl",
    "namespace": "spark-cluster"
  },
  "spec": {
    "concurrencyPolicy": "Forbid",
    "failedJobsHistoryLimit": 1,
    "jobTemplate": {
      "metadata": {
        "labels": {
          "environment": "staging",
          "name": "sot-fusion-etl"
        }
      },
      "spec": {
        "template": {
          "metadata": {
            "labels": {
              "environment": "staging",
              "name": "sot-fusion-etl"
            }
          },
          "spec": {
            "containers": [
              {
                "args": [
                  "sbt",
                  "sparkSubmit"
                ],
                "env": [
                  {
                    "name": "SPARK_MASTER_HOST",
                    "value": "spark-cluster-master-2-1-0"
                  },
                  {
                    "name": "SPARK_MASTER_PORT",
                    "value": "7077"
                  },
                  {
                    "name": "SPARK_MASTER_URL",
                    "value": "spark://$(SPARK_MASTER_HOST):$(SPARK_MASTER_PORT)"
                  },
                  {
                    "name": "SPARK_ENTRY_CLASS",
                    "value": "com.wink.spark.RunCassandra"
                  },
                  {
                    "name": "AWS_BUCKET",
                    "value": "wink-sots-staging"
                  },
                  {
                    "name": "AWS_RAILS_BUCKET",
                    "value": "wink-ml-production"
                  },
                  {
                    "name": "RAILS_LOGS_ENV",
                    "value": "staging"
                  },
                  {
                    "name": "AWS_ACCESS_KEY_ID",
                    "value": "AKIAIVNAJAQCKGTHZRTA"
                  },
                  {
                    "name": "AWS_SECRET_ACCESS_KEY",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "awssecretaccesskey",
                        "name": "sot-fusion-etl-staging-secrets"
                      }
                    }
                  },
                  {
                    "name": "FUSION_CASSANDRA_ADDRESS",
                    "value": "cassandra.fusion.svc.cluster.local"
                  },
                  {
                    "name": "FUSION_CASSANDRA_KEYSPACE",
                    "value": "fusion"
                  },
                  {
                    "name": "FUSION_CASSANDRA_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "fusioncassandrauser",
                        "name": "sot-fusion-etl-staging-secrets"
                      }
                    }
                  },
                  {
                    "name": "FUSION_CASSANDRA_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "fusioncassandrapassword",
                        "name": "sot-fusion-etl-staging-secrets"
                      }
                    }
                  }
                ],
                "image": "quay.io/winkapp/sot-fusion-etl:staging",
                "imagePullPolicy": "Always",
                "name": "sot-fusion-etl-spark",
                "resources": {
                  "limits": {
                    "cpu": "1500m",
                    "memory": "9000Mi"
                  },
                  "requests": {
                    "cpu": "1000m",
                    "memory": "7500Mi"
                  }
                }
              }
            ],
            "imagePullSecrets": [
              {
                "name": "winkapp-sot-fusion-etl-pull-secret"
              }
            ],
            "restartPolicy": "Never"
          }
        }
      }
    },
    "schedule": "0 0 * * *",
    "successfulJobsHistoryLimit": 3,
    "suspend": true
  }
}
