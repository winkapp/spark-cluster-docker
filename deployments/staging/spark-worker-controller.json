{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "component": "spark-worker"
        },
        "name": "spark-worker-controller",
        "namespace": "spark-cluster"
    },
    "spec": {
        "replicas": 5,
        "selector": {
            "matchLabels": {
                "component": "spark-worker"
            }
        },
        "strategy": {
            "rollingUpdate": {
                "maxSurge": 1,
                "maxUnavailable": 1
            },
            "type": "RollingUpdate"
        },
        "template": {
            "metadata": {
                "labels": {
                    "component": "spark-worker"
                }
            },
            "spec": {
                "containers": [
                    {
                        "args": [
                            "worker"
                        ],
                        "env": [
                            {
                                "name": "SPARK_MASTER_URL",
                                "value": "spark-cluster-master:7077"
                            },
                            {
                                "name": "SPARK_WORKER_MEM",
                                "value": "13G"
                            }
                        ],
                        "image": "quay.io/winkapp/spark-standalone:1.6.0",
                        "imagePullPolicy": "Always",
                        "livenessProbe": {
                            "failureThreshold": 3,
                            "httpGet": {
                                "path": "/",
                                "port": 8081,
                                "scheme": "HTTP"
                            },
                            "initialDelaySeconds": 10,
                            "periodSeconds": 30,
                            "successThreshold": 1,
                            "timeoutSeconds": 10
                        },
                        "name": "spark-worker",
                        "ports": [
                            {
                                "containerPort": 8081,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "6",
                                "memory": "13000Mi"
                            },
                            "requests": {
                                "cpu": "6",
                                "memory": "13000Mi"
                            }
                        },
                        "terminationMessagePath": "/dev/termination-log"
                    }
                ],
                "dnsPolicy": "ClusterFirst",
                "restartPolicy": "Always",
                "securityContext": {},
                "terminationGracePeriodSeconds": 30
            }
        }
    }
}
