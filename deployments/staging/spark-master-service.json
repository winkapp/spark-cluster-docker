{
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
        "name": "spark-cluster-master",
        "namespace": "spark-cluster"
    },
    "spec": {
        "clusterIP": "None",
        "ports": [
            {
                "name": "worker-port",
                "port": 7077,
                "protocol": "TCP",
                "targetPort": 7077
            },
            {
                "name": "webui",
                "port": 8080,
                "protocol": "TCP",
                "targetPort": 8080
            }
        ],
        "selector": {
            "component": "spark-cluster-master"
        }
    }
}
