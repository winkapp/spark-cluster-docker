{
    "kind": "Deployment",
    "apiVersion": "spark/2.1.0",
    "metadata": {
        "name": "spark-worker",
        "namespace": "spark-staging",
        "labels": {
            "name": "spark-worker",
            "environment": "staging",
            "team": "data"
        }
    },
    "spec": {
        "replicas": 3, 
        "template": {
            "metadata": {
                "labels": {
                    "name": "spark-worker",
                    "environment": "staging",
                    "team": "data"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "spark-worker",
                        "image": "quay.io/winkapp/spark:2.1.0",
                        "livenessProbe": {
                          "timeoutSeconds": 10,
                          "failureThreshold": 3,
                          "initialDelaySeconds": 10,
                          "httpGet": {
                            "path": "/",
                            "port": 8081
                          }
                        },
                        "ports": [
                            {
                                "containerPort": 8081,
                                "protocol": "TCP"
                            }
                        ],
                        "args": [
                          "/bin/bash",
                          "-c",
                          "\"/user/local/spark/sbint/start-slave.sh -m ${WORKER_MEM} ${MASTER_URL}\""
                        ],
                        "env": [
                            {
                                "name": "WORKER_MEM",
                                "value": "1g"
                            },
                            {
                                "name": "MASTER_URL",
                                "value": "spark://spark-master:7077"
                            }

                        ],
                        "resources": {
                            "requests":{
                                "memory": "150Mi",
                                "cpu": "150m"
                            },
                            "limits": {
                                "memory": "250Mi",
                                "cpu": "250m"
                            }
                        },
                        "imagePullPolicy": "IfNotPresent"
                    },
                    {
                        "name": "spark-shuffle-service",
                        "image": "quay.io/winkapp/spark:2.1.0",
                        "ports": [
                            {
                                "containerPort": 7337,
                                "protocol": "TCP"
                            }
                        ],
                        "args": [
                          "/bin/bash",
                          "-c",
                          "\"/user/local/spark/sbint/start-shuffle-service.sh\""
                        ],
                        "resources": {
                            "requests":{
                                "memory": "150Mi",
                                "cpu": "150m"
                            },
                            "limits": {
                                "memory": "250Mi",
                                "cpu": "250m"
                            }
                        },
                        "imagePullPolicy": "IfNotPresent"
                    },
                    {
                        "name": "kinesis-log-shuttle",
                        "image": "quay.io/winkapp/kinesis-log-shuttle:udp",
                        "ports": [
                            {
                                "containerPort": 514,
                                "protocol": "UDP"
                            }
                        ],
                        "env": [
                            {
                                "name": "KINESIS_URL",
                                "value": "%KINESIS_URL%"
                            },
                            {
                                "name": "KINESIS_SHARDS",
                                "value": "2000000"
                            }
                        ],
                        "resources": {
                            "requests":{
                                "memory": "5Mi",
                                "cpu": "1m"
                            },
                            "limits": {
                                "memory": "20Mi",
                                "cpu": "5m"
                            }
                        },
                        "imagePullPolicy": "Always"
                    }
                ],
                "dnsPolicy": "Default",
                "imagePullSecrets": [
                    {
                        "name": "???"
                    }
                ]
            }
        }
    }
}
