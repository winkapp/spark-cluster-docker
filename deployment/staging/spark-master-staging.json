{
    "kind": "Deployment",
    "apiVersion": "spark/2.1.0",
    "metadata": {
        "name": "spark-master",
        "namespace": "spark-staging",
        "labels": {
            "name": "spark-master",
            "environment": "staging",
            "team": "data"
        }
    },
    "spec": {
        "template": {
            "metadata": {
                "labels": {
                    "name": "spark-master",
                    "environment": "staging",
                    "team": "data"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "spark-master",
                        "image": "quay.io/winkapp/spark:2.1.0",
                        "livenessProbe": {
                          "timeoutSeconds": 10,
                          "failureThreshold": 3,
                          "initialDelaySeconds": 10,
                          "httpGet": {
                            "path": "/",
                            "port": 8080
                          }
                        },
                        "ports": [
                            {
                                "containerPort": 8080,
                                "protocol": "TCP"
                            },
                            {
                                "containerPort": 7077,
                                "protocol": "TCP"
                            },
                            {
                                "containerPort": 6066,
                                "protocol": "TCP"
                            }
                        ],
                        "args": [
                          "/bin/bash",
                          "-c",
                          "\"/user/local/spark/sbint/start-master.sh ${MASTER_URL}\""
                        ],
                        "env": [
                            {
                                "name": "MASTER_URL",
                                "value": "spark-master"
                            }

                        ],
                        "resources": {
                            "requests":{
                                "memory": "150Mi",
                                "cpu": "150m"
                            },
                            "limits": {
                                "memory": "250Mi",
                                "cpu": "250m"
                            }
                        },
                        "imagePullPolicy": "IfNotPresent"
                    }
                ],
                "dnsPolicy": "Default",
                "imagePullSecrets": [
                    {
                        "name": "???"
                    }
                ]
            }
        }
    }
}
